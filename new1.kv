<SplashScreen>:  
    name:'team'




<SendReview>:
    name: 'review'
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '10dp'
        canvas.before:
            Rectangle:
                source: 'C:\\Users\\dhanu\\OneDrive\\Desktop\\porsche-911-carrera_100787037_h.jpg'
                pos: self.pos
                size: self.size

        Label:
            text: 'HELLO WELCOME TO REVIEW PAGE GIVE YOUR REVIEWS!'
            size_hint_y: None
            height: dp(40)
            font_size: '20sp'
            bold: True

        Label:
            id: rating_label
            text: 'Rating:'
            size_hint_y: None
            height: dp(40)
            font_size: '18sp'

        Slider:
            id: rating_slider
            min: 0
            max: 5
            step: 1
            value: 0
            size_hint_y: None
            height: dp(40)

        Label:
            text: 'Review:'
            size_hint_y: None
            height: dp(40)
            font_size: '18sp'

        TextInput:
            id: review_input
            hint_text: 'Write your review here...'
            size_hint_y: None
            height: dp(100)

        Label:
            text: 'Receiver Email:'
            size_hint_y: None
            height: dp(40)
            font_size: '18sp'

        TextInput:
            id: email_input
            hint_text: 'Enter receiver email address'
            size_hint_y: None
            height: dp(40)

        Label:
            size_hint_y: None
            height: dp(20)

        Button:
            text: 'Send Review'
            size_hint_y: None
            height: dp(40)
            font_size: '18sp'
            on_release: root.send_review()

        MDIconButton:
            icon: "arrow-left"
            size_hint_y: None
            height: dp(48)
            on_release: app.root.current = 'rider'  # Change 'continue' to the screen name you want to navigate to

<Whatsapp>:
    name: 'what'
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        
        canvas.before:
            Rectangle:
                # Assuming the image is in the images folder
                source:"C:\\Users\\dhanu\\OneDrive\\Desktop\\th.jpeg"
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint_y: None
            height: '60dp'
            padding: '10dp'
            spacing: '10dp'
            
            Button:
                text: '<'
                size_hint_x: None
                width: '40dp'
                on_release: root.manager.current = 'rideroption'
                # You can use an icon instead of text if you have one
                # background_normal: 'images/arrow_icon.png'
                # background_down: 'images/arrow_icon_down.png'
                # size: (50, 50)
                
            Label:
                text: "WhatsApp Notification"
                font_size: '24sp'
                bold: True
                color: (1, 1, 1, 1)
                halign: 'center'
                valign: 'middle'
                size_hint_x: 1

        BoxLayout:
            orientation: 'vertical'
            spacing: '10dp'
            padding: '20dp'

            TextInput:
                id: phone_number
                hint_text: "Enter Phone Number"
                multiline: False
                size_hint_y: None
                height: '50dp'
                font_size: '18sp'
                background_color: (1, 1, 1, 0.5)  # Semi-transparent background
                foreground_color: (0, 0, 0, 1)  # Black text color
                padding: '10dp'
                radius: [10, 10, 10, 10]

            Button:
                text: "Send Ride Details"
                size_hint_y: None
                height: '50dp'
                font_size: '18sp'
                background_color: (0.1, 0.5, 0.1, 1)  # Green button
                color: (1, 1, 1, 1)  # White text
                on_release: root.book_ride()
                radius: [10, 10, 10, 10]

        ScrollView:
            GridLayout:
                id: booking_history
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: '10dp'
                padding: '10dp'




<Bill>:
    name: 'bill'
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '10dp'
        canvas.before:
            Rectangle:
                source: 'Mahindra_Thar_Photoshoot_At_Perupalem_Beach_West_Godavari_DistrictAPIndia__Djdavid.webp'
                pos: self.pos
                size: self.size

        MDIconButton:
            icon: 'arrow-right'
            size_hint: None, None
            size: '48dp', '48dp'
            pos_hint: {'x': 0, 'top': 1}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "rider"

        MDTextField:
            id: name
            mode: "filled"
            guide_text: "name"
            icon_right: "eye"
            helper_text: "Required"
            helper_text_mode: "on_error"
            size_hint_y: None
            height: "40dp"
            MDTextFieldHintText:
                text: "name"
                helper_text: "name"

        MDTextField:
            id: emailid
            mode: "filled"
            guide_text: "Emailid"
            icon_right: "eye"
            helper_text: "Required"
            helper_text_mode: "on_error"
            size_hint_y: None
            height: "40dp"
            MDTextFieldHintText:
                text: "Emailid"
                helper_text: "Emailid"

        MDTextField:
            id: review
            mode: "filled"
            guide_text: "Emailid"
            icon_right: "eye"
            helper_text: "Required"
            helper_text_mode: "on_error"
            size_hint_y: None
            height: "40dp"
            MDTextFieldHintText:
                text: "Review"
                helper_text: "Review"

        MDLabel:
            id: status
            halign: "center"
            valign: "middle"

        Button:
            text: "Send Mail"
            size_hint: None, None
            size: "200dp", "48dp"
            pos_hint: {"center_x": 0.5}
            on_release: root.send_hi()

        Button:
            text: "Back"
            size_hint: None, None
            size: '200dp', '48dp'
            background_color: (1,1,1,1)
            pos_hint: {'center_x': 0.5}
            on_release: root.clearDetails()
 


<Webpage>:
    name: 'web'
    orientation: "vertical"
    
    MDFloatLayout:
        MDIconButton:
            icon: "arrow-right"
            size_hint: None, None
            size: '48dp', '48dp'
            pos_hint: {'x': 0, 'top': 1}
            on_release: root.manager.current = "selection"
    
    BoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(20)  # Increased spacing between widgets
        
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'background_image.jpg'  # Path to your background image

        Label:
            text: "Google Maps"
            font_size: '36sp'  # Larger font size
            bold: True
            size_hint_y: None
            height: self.texture_size[1] + dp(20)  # Adjusted height
            
        Label:
            text: "You can ensure your routes in Google Maps!"
            font_size: '20sp'  # Increased font size
            size_hint_y: None
            height: self.texture_size[1]
        
        Label:
            text: "Enjoy your Ride!"
            font_size: '20sp'  # Increased font size
            size_hint_y: None
            height: self.texture_size[1]
        
        Label:
            text: "Turn on your GPS and start exploring."
            font_size: '20sp'  # Increased font size
            size_hint_y: None
            height: self.texture_size[1]
        
        Button:
            text: "Open Google Maps"
            background_normal: ''
            background_color: (0, 0.7, 0.5, 1)
            color: (1, 1, 1, 1)
            size_hint_y: None
            height: dp(48)
            font_size: '20sp'  # Increased font size
            on_release: root.open_google_maps()


<CarSelectionScreen>:
    name: 'car_selection'

